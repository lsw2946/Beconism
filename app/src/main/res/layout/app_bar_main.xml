<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.cu.amuse.beconism.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </LinearLayout>

    <include layout="@layout/content_main" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:minHeight="90dp"
            android:layout_gravity="bottom"
            android:background="#d7d7d7"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="놀이기구"
                android:layout_gravity="bottom"
                android:textSize="14sp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주차장"
                android:layout_gravity="bottom"
                android:textSize="14sp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상점"
                android:layout_gravity="bottom"
                android:textSize="14sp"
                android:layout_marginLeft="39dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이벤트"
                android:layout_gravity="bottom"
                android:textSize="14sp"
                android:layout_marginLeft="42dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미아찾기"
                android:layout_gravity="bottom"
                android:textSize="14sp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="false">

        <ImageButton
            android:id="@+id/bottom_ride_button"
            android:layout_width="65dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:src="@drawable/button_ride"
            android:scaleType="centerCrop"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="27dp"
            android:padding="3sp"
            android:onClick="bottomClick"/>

        <ImageButton
            android:id="@+id/bottom_parking_button"
            android:layout_width="65dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:src="@drawable/button_parking"
            android:scaleType="centerCrop"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="27dp"
            android:padding="3sp"
            android:onClick="bottomClick"/>

        <ImageButton
            android:id="@+id/bottom_shop_button"
            android:layout_width="65dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:src="@drawable/button_shop"
            android:scaleType="centerCrop"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="27dp"
            android:padding="3sp"
            android:onClick="bottomClick"/>

        <ImageButton
            android:id="@+id/bottom_parade_button"
            android:layout_width="65dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:src="@drawable/button_parade"
            android:scaleType="centerCrop"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="27dp"
            android:padding="3sp"
            android:onClick="bottomClick"/>

        <ImageButton
            android:id="@+id/bottom_child_button"
            android:layout_width="65dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:src="@drawable/button_child"
            android:scaleType="centerCrop"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="27dp"
            android:padding="3sp"
            android:onClick="bottomClick"/>

    </LinearLayout>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:minHeight="?attr/actionBarSize"/>


    </android.support.design.widget.AppBarLayout>




</android.support.design.widget.CoordinatorLayout>
