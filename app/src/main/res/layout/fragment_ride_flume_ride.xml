<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1인칭 동영상"
                android:textSize="25sp"
                android:textColor="#000eae"
                android:layout_marginBottom="5dp"/>
            <VideoView
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:src="@drawable/ride_image_flume_ride"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000eae"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="후룸라이드"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flume Ride"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="통나무배를 타고 숲 속 급류타기"
                android:textSize="18sp"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="온 가족이 함께 통나무배를 타는 신나는 대모험!"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="시원한 물살이 옷깃에 스미는 짜릿한 기분을 느껴보세요."/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ride_image_exception_ghost_flume_ride"
                android:paddingBottom="20dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src ="@drawable/ride_image_exception"
                android:scaleType="fitXY"
                android:paddingBottom="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_1"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_2"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_3"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_4"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_5"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_6"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_8"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:scaleType="fitXY"
                android:layout_marginTop="30dp"
                android:src ="@drawable/ride_image_exception_ghost_flume_ride2"/>




        </LinearLayout>

    </ScrollView>


</LinearLayout>