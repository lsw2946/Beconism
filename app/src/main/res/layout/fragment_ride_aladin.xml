<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1인칭 동영상"
                android:textSize="25sp"
                android:textColor="#000eae"
                android:layout_marginBottom="5dp"/>
            <VideoView
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:src="@drawable/ride_image_aladin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000eae"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="알라딘"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALADDIN"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="램프의 요정 지니가 지키는 모험의 성"
                android:textSize="18sp"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="아랍풍의 웅장한 알라딘성은 2개의 코스로 구성되어 있어"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="깜짝 덫과 미로, 미끄럼틀 등 한순간도 안심할 수 없는"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="모험을 즐기실 수 있습니다."/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ride_image_exception_aladin"
                android:paddingBottom="20dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src ="@drawable/ride_image_exception"
                android:scaleType="fitXY"
                android:paddingBottom="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_1"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_2"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_4"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_5"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_6"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_8"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:scaleType="fitXY"
                android:layout_marginTop="30dp"
                android:src ="@drawable/ride_image_exception_aladin2"/>




        </LinearLayout>

    </ScrollView>


</LinearLayout>