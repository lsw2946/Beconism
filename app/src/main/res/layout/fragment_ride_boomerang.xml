<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1인칭 동영상"
                android:textSize="25sp"
                android:textColor="#000eae"
                android:layout_marginBottom="5dp"/>
            <VideoView
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:src="@drawable/ride_image_boomerang"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000eae"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="부메랑"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOOMERANG"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이월드만의 짜릿한 재미, 초고속 롤러코스터!"
                android:textSize="18sp"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="30m높이에서 앞으로 떨어졌다 다시 뒤로 떨어지는"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="초고속 롤러코스터! 이월드에서만 경험할 수 있는"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="짜릿한 모험."/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ride_image_exception_boomerang"
                android:paddingBottom="20dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src ="@drawable/ride_image_exception"
                android:scaleType="fitXY"
                android:paddingBottom="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_1"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_2"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_3"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_4"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_5"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_6"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_8"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:scaleType="fitXY"
                android:layout_marginTop="30dp"
                android:src ="@drawable/ride_image_exception_boomerang2"/>




        </LinearLayout>

    </ScrollView>


</LinearLayout>