<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1인칭 동영상"
                android:textSize="25sp"
                android:textColor="#000eae"
                android:layout_marginBottom="5dp"/>
            <VideoView
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:src="@drawable/ride_image_viking"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000eae"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="바이킹"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIKING"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="야호~하늘과 내가 하나가 되는 기분"
                android:textSize="18sp"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="회전각 좌우 66도 국내 최대 해적선 바이킹"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="제일 뒤에 앉아서 하강시 눈을 크게 뜨며 양손을 높이"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="들어 함성을 질러보세요. 두배 더 재미있어져요~!"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ride_image_exception_viking"
                android:paddingBottom="20dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src ="@drawable/ride_image_exception"
                android:scaleType="fitXY"
                android:paddingBottom="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_1"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_2"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_3"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_4"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_5"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_6"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src ="@drawable/ride_image_exception_num_8"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:scaleType="fitXY"
                android:layout_marginTop="30dp"
                android:src ="@drawable/ride_image_exception_viking2"/>




        </LinearLayout>

    </ScrollView>


</LinearLayout>